<script type="text/javascript" charset="utf-8">
	setInterval("cycleDots();", 400);
	var current_state = 0;
	function cycleDots () {
		if (current_state == 0) {
			document.getElementById("d1").style.color = "#000";
			current_state = 1;			
		} else if (current_state == 1) {
			document.getElementById("d2").style.color = "#000";
			current_state = 2;
		} else if (current_state == 2) {
			document.getElementById("d3").style.color = "#000";
			current_state = 3;
		} else if (current_state == 3) {
			document.getElementById("d1").style.color = "#ffec80";
			document.getElementById("d2").style.color = "#ffec80";
			document.getElementById("d3").style.color = "#ffec80";
			current_state = 0;
		};
	}
</script>
